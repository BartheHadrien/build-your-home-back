{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
{% for message in app.flashes('notice') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status }}</td>
            </tr>
            {% for article in order.orderlists %}
                    <tr> 
                    <th>article name </th>
                        <td>{{ article.article.name}}</td>
                    </tr>
                {% endfor %}
            <tr>
                <th>CreatedAt</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_order_index') }}">back to list</a>

    <a href="{{ path('app_back_order_edit', {'id': order.id}) }}">edit</a>

    {{ include('back/order/_delete_form.html.twig') }}
{% endblock %}
