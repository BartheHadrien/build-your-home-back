{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
{% for message in app.flashes('notice') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ category.picture }}</td>
            </tr>
            <tr>
                <th>Nom d'url</th>
                <td>{{ category.slug }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ordre d'affichage</th>
                <td>{{ category.displayOrder }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_category_index') }}" class="btn btn-primary">Retour à la liste</a>

    <a href="{{ path('app_back_category_edit', {'id': category.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('back/category/_delete_form.html.twig') }}
{% endblock %}
