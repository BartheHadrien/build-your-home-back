{% extends 'base.html.twig' %}

{% block title %}Réduction{% endblock %}

{% block body %}
{% for message in app.flashes('notice') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Réduction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ discount.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ discount.name }}</td>
            </tr>
            <tr>
                <th>Taux</th>
                <td>{{ discount.rate }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ discount.createdAt ? discount.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ discount.updatedAt ? discount.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_discount_index') }}" class="btn btn-primary">Retour à la liste</a>

    <a href="{{ path('app_back_discount_edit', {'id': discount.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('back/discount/_delete_form.html.twig') }}
{% endblock %}
