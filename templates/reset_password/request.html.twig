{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block link %}<link rel="stylesheet" href="{{ asset('assets/styles.scss') }}">{% endblock %}

{% block nav %}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div class="login">
    <section class="login--section">
        <div class="login--container">
            <h1 class="login--title">Réinitialiser votre mot de passe</h1>
            <div class="login--form">
                {{ form_start(requestForm) }}
                    <div class="my-custom-class-for-errors">
                        {{ form_errors(requestForm) }}
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(requestForm.email) }}
                        </div>
                    </div>
                    <div>
                        <small>
                            Entrez votre adresse email et nous vous enverrons un lien pour changer votre mot de passe.
                        </small>
                    </div>
                    <button class="login--button__submit">Envoyer l'email de changement de mot de passe</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </section>
</div>
{% endblock %}
